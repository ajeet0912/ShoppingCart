@model IEnumerable<ClothBazar.Entities.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Cloth Bazar</h1>
    <hr />
</div>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-3">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <!--Name-->
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Name</p>
                                <p class="card-title text-center">@product.Description</p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center">Price : <span>@product.Price.ToString("c")</span></p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <a href="" class="btn btn-primary bg-gradient border-0 form-control">Add To Cart</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
