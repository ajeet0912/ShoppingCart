@model ShoppingCart
@{
    ViewData["Title"] = "Home Page";
}
<form method="post">
    <div class="row pb-3">
        <div class="col-lg-12 col-sm-12">
            <div class="row p-3">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <!--Name-->
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <input hidden asp-for="ProductId" />
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@Model.Product.Name</p>
                                <p class="card-title text-center">@Model.Product.Description</p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center">Price : <span>@Model.Product.Price.ToString("c")</span></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center">Quantity : <input asp-for="Count" style="width:40px;" /></p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary bg-gradient border-0 form-control">Add To Cart</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>>

